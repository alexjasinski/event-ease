@page "/events"

<h3>Event List</h3>

@foreach (var evt in events)
{
    <div class="event-card">
        <h4>@evt.Name</h4>
        <p>Date: @evt.Date</p>
        <p>Location: @evt.Location</p>

        <!-- Correct way to add a link -->
        <a href="/eventdetails/@evt.Id">View Details</a>
        <hr /> <!-- Self-closing hr tag -->
    </div>
}

@code {
    private List<Event> events = new List<Event>
    {
        new Event { Id = 1, Name = "Tech Conference", Date = "2025-09-30", Location = "Berlin" },
        new Event { Id = 2, Name = "Music Festival", Date = "2025-10-10", Location = "Hamburg" },
        new Event { Id = 3, Name = "Art Expo", Date = "2025-11-05", Location = "Munich" }
    };

    public class Event
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Date { get; set; }
        public string Location { get; set; }
    }
}

